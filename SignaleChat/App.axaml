<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SignaleChat.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://SignaleChat/Styles/Button.axaml" />
        <StyleInclude Source="avares://SignaleChat/Styles/Path.axaml" />
        <StyleInclude Source="avares://SignaleChat/Styles/Window.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://SignaleChat/Shared/Path.axaml" />
                <ResourceInclude Source="avares://SignaleChat/Shared/Svg.axaml" />
                <ResourceInclude Source="avares://SignaleChat/Themes/Controls/_index.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>