<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SignaleChat.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://SignaleChat/Icon.axaml" />
        <StyleInclude Source="avares://SignaleChat/Styles/Button.axaml" />
        <StyleInclude Source="avares://SignaleChat/Styles/Path.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://SignaleChat/Styles/RadioButton.axaml" />
                <ResourceInclude Source="avares://SignaleChat/Styles/NavButton.axaml" />
                <ResourceInclude Source="avares://SignaleChat/Styles/FriendButton.axaml" />
                <ResourceInclude Source="avares://SignaleChat/Styles/PhoneFileButton.axaml" />
                <ResourceInclude Source="avares://SignaleChat/Styles/Popu.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>